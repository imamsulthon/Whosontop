<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/padding_medium"
        card_view:cardElevation="@dimen/padding_medium"
        card_view:cardUseCompatPadding="true"
        card_view:elevation="@dimen/padding_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="@dimen/margin_large_x"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_medium"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    tools:text="@string/item_id"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:layout_toRightOf="@id/tv_id"
                    tools:text="@string/item_content"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    android:maxLines="3"/>

                <TextView
                    android:id="@+id/tv_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_small"
                    android:layout_below="@id/tv_content"
                    android:layout_toRightOf="@id/tv_id"
                    tools:text="@string/item_category"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_size_small"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_small"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/iv_weareontop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/we_are_top"
                    android:src="@drawable/ic_arrow_up"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tv_weareontop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/we_are_top"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorAccent"
                    android:visibility="visible"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>